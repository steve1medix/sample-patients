  {% extends "entry.xml" %}
  {% block content %}
    <DocumentReference>
  {{resource_id}}
        <text>
          <status value="generated"/>
          <div xmlns="http://www.w3.org/1999/xhtml">{{d.title}}</div>
        </text>
        <subject>
          <reference value="{{base_url}}{{pid}}"/>
        </subject>
        <type>
          <coding>
            <system value="{{d.system}}"/>
            <code value="{{d.code}}"/>
            <display value="{{d.display}}"/>
          </coding>
          <text value="{{d.display}}"/>
        </type>
        <author>
          <reference value="Practitioner/1234"/>
        </author>
        <created value="{{d.date}}"/>
        <indexed value="{{now}}"/>
        <status value="current"/>
        <description value="{{d.title}}"/>
        <content>
            <attachment>
                {%- if d.size and d.hash %}
                <size value="{{d.size}}"/>
                <hash value="{{d.hash}}"/>
                {%- endif %}
                <url value="/{{d.binary_id}}"/>
               <contentType value="{{d.mime_type}}"/>
            </attachment>
        </content>
    </DocumentReference>
  {% endblock %}
